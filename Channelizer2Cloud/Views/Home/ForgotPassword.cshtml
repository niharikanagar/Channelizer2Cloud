
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h3>Forgot Password</h3>

<div class="row">
    <div class="col-md-offset-4 col-md-4 s-loginform">
        <div class="row">
            
        @using (Html.BeginForm())
        {
           
            <div class="row">
                <div class="s-loginform">
                    <div class="row">
                    <div class="col-md-1"></div> <div  class="col-md-10"><h3>Forgot Password</h3></div></div>
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-10">
                            <br />
                            
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.Label("Enter UserName/Email to Receive Your Password", htmlAttributes: new { @class = "control-label" })
                                    @Html.Editor("userName", new { htmlAttributes = new { @class = "form-control",type = "email",required="required" } })
                                    @*<p class="text-danger">@ViewBag.ValidationError</p>*@
                                </div>
                           

                           
                            <div class="form-group">
                                <div class="col-md-offset-10">
                                    <input type="submit" value="Send" class="btn btn-primary" />
                                </div>
                                <br />
                                <div class="s-center">
                                    <p class="text-danger">@Html.Raw(ViewBag.ValidationError)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>
            </div>
        }
            </div>
            
</div>
</div>