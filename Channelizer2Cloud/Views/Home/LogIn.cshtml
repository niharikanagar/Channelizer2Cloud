@model Channelizer2Cloud.ViewModel.LoginUser

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          
        </div>
        <div class="col-md-4 s-loginform">
            @using (Html.BeginForm())
            {
                <div class="s-center">
                    <img class="img-fluid" src="~/Content/img/logo.png" alt="Channelizer2Cloud">
                </div>
                <br />
                <div class="form-group">
                    @Html.Label("Username", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Password", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="col-md-12 btn btn-primary" />
                </div>
                <div class="s-center">
                    <p class="text-danger">@ViewBag.ValidationError</p>
                    <br />
                    <label></label>  <a href="@Url.Action("ForgotPassword","Home")">Forgot password</a>
                    <br />
                </div>
                <br>
            }
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





