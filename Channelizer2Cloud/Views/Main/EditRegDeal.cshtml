                {
                    <span class='CDRFchecked'> *</span>
                }
                <br />


                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        foreach (var lists in (IEnumerable<SelectListItem>)ViewData[fieldid])
                        {
                            if (lists.Text == dealdata.DataValue)
                            {
                                <input type="radio" name=@Html.DisplayFor(modelItem => item.FieldName) value=@lists.Value checked />
                            }
                            else
                            {
                                <input type="radio" name=@Html.DisplayFor(modelItem => item.FieldName) value=@lists.Value />
                            }
                            <label> @lists.Text </label><br />

                        }

                        <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
                    }
                }

             
            </div>
