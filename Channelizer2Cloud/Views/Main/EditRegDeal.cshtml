@model IEnumerable<Channelizer2Cloud.Models.Vendor_RegistrationFormField>
@{
    ViewBag.Title = "Deal Registration";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<!--Vendor Logo Title-->
@using (Html.BeginForm("SaveDealRegistrationForm", "Main", new { dealId = ViewBag.DealID }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <img src="~/Content/img/vendor/@ViewBag.VendorLogo" width="80" height="80" />

    foreach (var item in Model)
    {
        if (item.FieldTypeId == 7)
        {
         <div class="form-group">
        <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
        @if (item.IsRequired ?? false)
        {
            <span class='CDRFchecked'> *</span>
        }
        @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
        {
            if (dealdata.FieldLabel == item.FieldLabel)
            {
            <input class="form-control" type="email" name=@Html.DisplayFor(modelItem => item.FieldName)  value=@dealdata.DataValue />
            }
        }
            <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
        </div>

        }
        if (item.FieldTypeId == 5)
        {
            <div class="form-group">
        <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
        @if (item.IsRequired ?? false)
        {
            <span class='CDRFchecked'> *</span>
        }
        @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
        {
            if (dealdata.FieldLabel == item.FieldLabel)
            {
                <input class="form-control" type="date" name=@Html.DisplayFor(modelItem => item.FieldName)  value=@dealdata.DataValue />
            }
        }
                <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
            </div>
        }
        if (item.FieldTypeId == 11)
        {
            <div class="form-group">
                <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
                @if (item.IsRequired ?? false)
                {
                    <span class='CDRFchecked'> *</span>
                }
                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        <input class="form-control" type="number" name=@Html.DisplayFor(modelItem => item.FieldName) value=@dealdata.DataValue />
                    }
                }
                        <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
                    </div>
        }
        if (item.FieldTypeId == 18)
        {
            <div class="form-group">
                <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
                @if (item.IsRequired ?? false)
                {
                    <span class='CDRFchecked'> *</span>
                }
                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        <input class="form-control" type="tel" name=@Html.DisplayFor(modelItem => item.FieldName) value=@dealdata.DataValue />
                    }
                }
                      <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
                    </div>
        }
        if (item.FieldTypeId == 19)
        {
            <div class="form-group">
                <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
                @if (item.IsRequired ?? false)
                {
                    <span class='CDRFchecked'> *</span>
                }
                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        <input class="form-control" type="text" name=@Html.DisplayFor(modelItem => item.FieldName) value=@dealdata.DataValue />
                    }
                }
                    <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
                </div>
        }

        if (item.FieldTypeId == 24)
        {
            string fieldid = (item.FieldName).Remove(0, 8);

            <div class="form-group">
                <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
                @if (item.IsRequired ?? false)
                {
                    <span class='CDRFchecked'> *</span>
                }
                <br />
                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        @Html.DropDownList(item.FieldName, new SelectList((IEnumerable<SelectListItem>)ViewData[fieldid], "Value", "Text", dealdata.DataValue), new { @class = "form-control" })
                    }
                }
                        <span>@Html.DisplayFor(modelItem => item.FieldDescription)</span>
                    </div>
        }
        if (item.FieldTypeId == 2)
        {
            string fieldid = (item.FieldName).Remove(0, 8);
            <div class="form-group">
                <label class="control-label">@Html.DisplayFor(modelItem => item.FieldLabel)</label>
                @if (item.IsRequired ?? false)
                {
                    <span class='CDRFchecked'> *</span>
                }
                <br />
                @foreach (var dealdata in (IEnumerable<Channelizer2Cloud.ViewModel.DealFormViewModel>)ViewBag.DealFormField)
                {
                    if (dealdata.FieldLabel == item.FieldLabel)
                    {
                        foreach (var lists in (IEnumerable<SelectListItem>)ViewData[fieldid])
                        {


                            if (dealdata.DataValue.Contains(lists.Text)) {
                                    <input type = "checkbox" name = @Html.DisplayFor(modelItem => item.FieldName) value = @lists.Value checked />
                            }
                            else {
                        <input type = "checkbox" name = @Html.DisplayFor(modelItem => item.FieldName) value = @lists.Value />
                            }
                    <label> @lists.Text </label><br />

